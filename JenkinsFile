pipeline {
agent any
environment {
        PROJECT_ID = 'gentle-realm-285706'
        CLUSTER_NAME = 'cluster-locust'
        LOCATION = 'us-central1-c'
        CREDENTIALS_ID = 'GKE'
    }
stages {
    stage('checkout')
	{
        steps 
			{
                git 'https://github.com/esmy1990/locust-experiments.git'
                       
            }
	
	}
    stage('docker build')
	{
        steps
			{
			 sh "docker build -t esmy1990/locust ."
               
            }
    }
	stage('docker push')
	{
        steps
		{
			withCredentials([string(credentialsId: 'dockerhubpwd', variable: 'dockerpwd')]) 
			{
		
			sh "docker login -u esmy1990 -p ${dockerpwd}"
			}
		
			sh "docker  push esmy1990/locust:latest"
		}
    }
    stage('Deploy to GKE') {
            steps{
                
                step([$class: 'KubernetesEngineBuilder', projectId: env.PROJECT_ID, clusterName: env.CLUSTER_NAME, location: env.LOCATION, credentialsId: env.CREDENTIALS_ID, verifyDeployments: true])
		sh "kubectl get ns "
		sh "kubectl create namespace esmy"
            }
}
}
